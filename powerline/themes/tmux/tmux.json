{
    "default_module": "powerline.segments.common",
    "segments": {
        "right": [
            {
                "function": "system_load",
                "priority": 50
            },
            {
                "function": "date",
                "args": {
                    "format": "%H:%M",
                    "istime": true
                }
            },
            {
                "function": "hostname"
            },
            {
                "function": "battery"
            }
        ]
    }
}
