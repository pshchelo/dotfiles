[user]
    name = Pavlo Shchelokovskyy
    email = shchelokovskyy@gmail.com
[core]
    autocrlf = input
    editor = vim
    excludesfile = ~/.gitignore_global
[push]
    default = simple
[i18n]
    filesEncoding = utf-8
[merge]
    tool = vimdiff
[diff]
    guitool = vimdiff
[gitreview]
    username = pshchelo
    rebase = false
[alias]
    graph = log --graph --oneline --decorate
    ss = status --short
    tox-rebase = rebase -x 'tox --skip-missing-interpreters' -i
