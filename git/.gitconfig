[user]
    name = Pavlo Shchelokovskyy
    email = shchelokovskyy@gmail.com
[core]
    autocrlf = input
    editor = vim
    excludesfile = ~/.gitignore_global
    attributesfile = ~/.gitattributes
[push]
    default = simple
[i18n]
    filesEncoding = utf-8
[merge]
    tool = vimdiff
[diff]
    guitool = vimdiff
[gitreview]
    username = pshchelo
    rebase = false
[alias]
    b = branch
    p = pull --all --prune
    graph = log --graph --oneline --decorate
    head = log --graph --oneline --decorate -5
    ss = status --short
    tox-rebase = rebase -x 'tox --skip-missing-interpreters' -i
    copenstack = "!f() { git clone https://opendev.org/openstack/$1 && git -C $1 review -s; }; f"
    cmcp = "!f() { git clone ssh://pshchelokovskyy@gerrit.mcp.mirantis.com:29418/$1; }; f"
    cfuel = "!f() { git clone ssh://pshchelo@review.fuel-infra.org:29418/$1; }; f"
    rmcp = "!f() { git remote add -f mcp ssh://pshchelokovskyy@gerrit.mcp.mirantis.com:29418/packaging/sources/${1:-$(basename $PWD)} ; }; f"
    rfuel = "!f() { git remote add -f fuel ssh://pshchelo@review.fuel-infra.org:29418/openstack/${1:-$(basename $PWD)} ; }; f"
