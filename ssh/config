IdentityFile ~/.ssh/git_rsa
IdentityFile ~/.ssh/id_rsa

Host *
    # Use shared mode for all connections
    ControlMaster auto
    ControlPath ~/.ssh/master-%r@%h:%p

# Range of default subnet in DevStack
Host 10.0.*.*
    StrictHostKeyChecking no
    UserKnownHostsFile /dev/null
    LogLevel QUIET

# Range for default Floating IP space in DevStack
Host 172.24.4.*
    StrictHostKeyChecking no
    UserKnownHostsFile /dev/null
    LogLevel QUIET

# My DevStack+Heat at work via tunnel
Host heat
    HostName pshchelokovskyy-pc
    Port 2127

# My DevStacack+Ironic at work via tunnel
Host ironic
    HostName pshchelokovskyy-pc
    Port 2126
